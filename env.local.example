# ========================================
# SYNERGY - Пример для локальной разработки
# ========================================
# Скопируйте содержимое в .env (в корне проекта)
# ВАЖНО: Не коммитьте .env в репозиторий!

# === База данных ===
DATABASE_URL=postgresql://username:password@localhost:5432/synergy

# === JWT секрет ===
JWT_SECRET=your_jwt_secret_key_change_in_production

# === EmailJS - НОВЫЙ СЕРВИС service_22cecl9 ===
# Используется для отправки писем при регистрации и восстановлении пароля
VITE_EMAILJS_SERVICE_ID=service_22cecl9
VITE_EMAILJS_PUBLIC_KEY=your_emailjs_public_key_here
VITE_EMAILJS_VERIFICATION_TEMPLATE_ID=your_verification_template_id_here
VITE_EMAILJS_RESET_PASSWORD_TEMPLATE_ID=your_reset_password_template_id_here
VITE_EMAILJS_MODERATION_TEMPLATE_ID=your_moderation_template_id_here

# === Frontend URL ===
FRONTEND_URL=http://localhost:3000

# === Юкасса (опционально) ===
YOOKASSA_SHOP_ID=your_shop_id_here
YOOKASSA_SECRET_KEY=your_secret_key_here

# === Порт сервера ===
PORT=3001






