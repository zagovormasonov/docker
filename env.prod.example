# ========================================
# SYNERGY PRODUCTION - Пример для продакшена
# ========================================
# Скопируйте содержимое в .env.prod (в корне проекта)
# ВАЖНО: Не коммитьте .env.prod в репозиторий!

# === База данных ===
DB_PASSWORD=your_secure_database_password_change_this

# === JWT секрет (обязательно измените!) ===
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long

# === Frontend URL ===
FRONTEND_URL=https://yourdomain.com

# === EmailJS - НОВЫЙ СЕРВИС service_22cecl9 ===
# Переменные для фронтенда (встраиваются в сборку)
VITE_EMAILJS_SERVICE_ID=service_22cecl9
VITE_EMAILJS_PUBLIC_KEY=your_emailjs_public_key_here
VITE_EMAILJS_VERIFICATION_TEMPLATE_ID=your_verification_template_id_here
VITE_EMAILJS_RESET_PASSWORD_TEMPLATE_ID=your_reset_password_template_id_here
VITE_EMAILJS_MODERATION_TEMPLATE_ID=your_moderation_template_id_here

# Переменные для бэкенда (опционально)
EMAILJS_SERVICE_ID=service_22cecl9
EMAILJS_PUBLIC_KEY=your_emailjs_public_key_here
EMAILJS_MODERATION_TEMPLATE_ID=your_moderation_template_id_here

# === Юкасса ===
YOOKASSA_SHOP_ID=your_yookassa_shop_id_here
YOOKASSA_SECRET_KEY=your_yookassa_secret_key_here

# === Telegram Bot (опционально) ===
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# === pgAdmin (опционально) ===
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=secure_pgadmin_password

# === Инструкции ===
# 1. Замените все значения your_* и yourdomain.com на реальные
# 2. Service ID уже установлен на service_22cecl9
# 3. ID шаблонов остаются теми же, что были раньше
# 4. После изменений пересоберите Docker:
#    docker-compose -f docker-compose.prod.yml --env-file .env.prod build --no-cache
#    docker-compose -f docker-compose.prod.yml --env-file .env.prod up -d




